<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs", {title: "Login" }); %>

    <body>
        <%- include("./partials/nav_bar.ejs"); %>
            <div class="d-flex justify-content-center align-items-center mt-5" style="min-height: 60vh ;">
                <div class="card p-4"
                    style="max-width: 400px; width: 100%; background-color: #D9D9D9; border-radius: 50px; border: none;">
                    <div class="card-body">
                        <!-- Login title -->
                        <h3 class="text-center mb-4">Login</h3>
                        <form method="POST">
                            <% if (error) {%>
                                <div class="text-danger mb-3" style="font-size: 16px;">
                                    <i class="bi bi-exclamation-circle me-1"></i><%= error %>
                                </div>
                            <% } %>
                            <!-- Username input -->
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" id="username" name="username" class="form-control"
                                    style="border-radius: 50px;" placeholder="Enter username" required>
                            </div>
                            <!-- Password input -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="password" class="form-control"
                                    style="border-radius: 50px;" placeholder="Enter password" required>
                            </div>
                            <!-- Forgot password link -->
                            <% /* %>
                            <div class="mb-3 text-left">
                                <a href="" class="text-center" style="color: #3d704d; font-weight: bold;">Forgotten your
                                    password?</a>
                            </div>
                            <% */ %>
                            <!-- Login button -->
                            <div class="text-center">
                                <button type="submit" class="btn"
                                    style="width: 131px; padding: 6px 12px; border-radius: 50px; background-color: #3d704d; color: white; border: none; transition: background-color 0.3s ease;"
                                    onmouseover="this.style.backgroundColor='#2e5239';"
                                    onmouseout="this.style.backgroundColor='#3d704d';">Login</button>
                            </div>
                        </form>
                        <!-- Register link -->
                        <div class="text-center mt-3">
                            <p>Don't have an account?
                                <a href="/register" class="" style="font-weight: bold; color: #3d704d;">Create account</a>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>

</html>
